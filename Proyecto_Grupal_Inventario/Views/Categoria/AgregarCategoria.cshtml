@using DAL.Models;
@model Categorias
@{
    ViewBag.Title = "AgregarCategoria";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-12">
                <center>
                    <h1>Agregar Categoria</h1>
                </center>
            </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.IdCategoria)

                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Nombre: </label>
                        @Html.TextBoxFor(x => x.NombreCategoria, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.NombreCategoria, null, new { @class = "text-danger" })
                    </div>
                </div>
                               <div>
                    <center>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </center>
                </div>
            }
        </div>
    </div>
</div>

