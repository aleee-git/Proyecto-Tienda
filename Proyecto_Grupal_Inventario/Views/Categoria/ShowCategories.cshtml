@using DAL.Models;
@model List<Categorias>
@{
    ViewBag.Title = "ShowCategories";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h2>Categorias</h2>
            </center>
            <br />  
            <button class="btn btn-primary" onclick="window.location.href='/Categoria/AgregarCategoria'"> <i class="fas fa-plus-circle"></i> Agregar </button>
            <br />  
            <br />  
            <table class="table table-hover table-striped table-bordered">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Acciones</td>
                </tr>
                </thead>
                <tbody>
                    @if (Model.Count >0)
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.IdCategoria</td>
                                <td>@c.NombreCategoria</td>
                                <td>
                                    <button class="btn btn-success" onclick="window.location.href = '/Categoria/AgregarCategoria?IdCa='+@c.IdCategoria"> <i class="fas fa-edit"></i> Editar</button>
                                    <button class="btn btn-danger"onclick="window.location.href = '/Categoria/EliminarC?IdCa='+@c.IdCategoria"> <i class="fas fa-trash"></i> Eliminar</button>

                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
