@using DAL.Models;

@model List<Productos>


@{
    ViewBag.Title = "Productos";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <br />
            <center> <h2>Listado de productos</h2> </center>

            <button class="btn" onclick="window.location.href='/Producto/CreateOrEditProductos' " style="background-color: #6F4C5B; color:#fff">Agregar</button>
            <br />
            <br />

            <table class="table table-striped table-hover table-bordered table-responsive" style="border-width:0px; text-align:center">

                <thead style="background-color: #9E7777; color: #fff">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Descripción</th>
                        <th>Imagen</th>
                        <th>Categoría</th>
                        <th>Proveedor</th>

                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                @if (Model.Count() > 0)
                {
                    foreach (var pro in Model)
                    {
                        <tbody>

                            <tr>
                                <td>@pro.IdProducto</td>
                                <td>@pro.NombreProducto</td>
                                <td>@pro.Precio</td>
                                <td>@pro.Descripcion</td>
                                <td>@pro.Imagen</td>
                                <td>@pro.Categoria.NombreCategoria</td>
                                <td>@pro.Proveedores.NombreProveedor</td>
                                <td>
                                    <button class="btn btn-warning" onclick="window.location.href = '/Producto/CreateOrEditProductos?idProducto=' + @pro.IdProducto" style="color:#000">Editar</button>
                                </td>
                                <td>
                                    <button class="btn btn-danger" onclick="window.location.href = '/Producto/DeleteProductos?idProducto=' +@pro.IdProducto " style="color:#fff">Eliminar</button>
                                </td>
                            </tr>

                        </tbody>
                    }
                }

            </table>
        </div>
    </div>
</div>